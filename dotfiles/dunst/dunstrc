# Dunst Configuration
# These colors should be detected and updated by MatYouAI

[global]
    # Display
    monitor = 0
    follow = mouse
    
    # Geometry
    width = 300
    height = 300
    origin = top-right
    offset = 10x50
    scale = 0
    notification_limit = 0
    
    # Progress bar
    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    
    # Appearance
